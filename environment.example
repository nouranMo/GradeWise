# MongoDB Configuration (replace with your actual MongoDB connection)
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0

# JWT Secret (Generate a secure random string)
JWT_SECRET=YourSuperSecretKeyThatIsAtLeast512BitsLongAndSecureEnoughForHS512Algorithm1234567890

# Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Google Client ID for OAuth (used by both React and Flask)
GOOGLE_CLIENT_ID=your_google_client_id_here

# OpenAI API Key (for recommendations and additional AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Note: Google Cloud Application Credentials are handled automatically by the system
# If you encounter "GOOGLE_APPLICATION_CREDENTIALS" errors, they can be safely ignored
# as the system uses API keys for Google services, not service account credentials