FROM python:3.9-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    tesseract-ocr \
    tesseract-ocr-eng \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgomp1 \
    wget \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install additional dependencies for the Flask app
RUN pip install --no-cache-dir \
    flask-limiter \
    nltk \
    beautifulsoup4 \
    openai \
    PyPDF2 \
    python-docx \
    google-auth \
    google-auth-oauthlib \
    google-auth-httplib2

# Download NLTK data
RUN python -c "import nltk; nltk.download('punkt')"

# Copy the entire services directory structure
COPY . .

# Set the working directory to where app.py is located
WORKDIR /app/srs_analyzer

# Create uploads directory
RUN mkdir -p /app/uploads ./uploads

# Create a non-root user
RUN useradd --create-home --shell /bin/bash app
RUN chown -R app:app /app
USER app

EXPOSE 5000

# Set environment variables
ENV FLASK_APP=app.py
ENV FLASK_ENV=production
ENV PYTHONPATH=/app

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:5000/ || exit 1

CMD ["python", "app.py"] 